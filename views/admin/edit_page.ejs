<%- include('../_layouts/adminheader.ejs'); -%><br>
    <div class="container" style="background-color: rgb(247, 247, 247);">
        <br>
        <%- include ('../messages') %>
            <h2 class="page-title"> <i class="fa fa-plus" aria-hidden="true"></i> <b> Edit a page</b></h2>
            <br>
            <a href="/admin/pages" class="btn btn-primary"><b>  Back to all pages </b><i class="fa fa-hand-o-left" style="font-size:23px"></i></a>
            <br><br>
            <form method="POST" action="/admin/pages/edit-page/<%= id %>">
                <div class="form-group">
                    <label for="">Title</label>
                    <input type="text" class="form-control" name="title" value="<%= typeof title != 'undefined' ? title:'' %>" placeholder="Title">
                </div>
                <div class="form-group">
                    <label for="">Slug</label>
                    <input type="text" class="form-control" name="slug" value="<%= typeof slug != 'undefined' ? slug:'' %>" placeholder="Slug">
                </div>
                <div class="form-group">
                    <label for="">Content</label>
                    <textarea name="content" class="form-control" id="ta" cols="30" rows="10" placeholder="Content"><%= content %></textarea>
                </div>
                <button class="btn btn-success">Submit</button>
                <br><br>
            </form>
    </div>
    <%- include('../_layouts/adminfooter.ejs'); -%>